{
  "name": "checkmarked",
  "version": "0.1.0",
  "description": "Extracts code blocks from markdown files, then runs checks based on language",
  "scripts": {
    "format": "find . -iname '*.re' | grep -v node_modules | xargs bsrefmt --in-place && find . -iname '*.rei' | xargs bsrefmt -i true --in-place",
    "build": "bsb -make-world",
    "start": "bsb -make-world -w",
    "clean": "bsb -clean-world",
    "test": "bsb -make-world && cd test && node ../lib/js/src/main *.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glennsl/checkmarked.git"
  },
  "keywords": [
    "markdown",
    "code block",
    "check"
  ],
  "author": "glennsl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/glennsl/checkmarked/issues"
  },
  "homepage": "https://github.com/glennsl/checkmarked#readme",
  "dependencies": {
    "@glennsl/bs-json": "^5.0.4",
    "acorn": "^4.0.13",
    "bs-node": "github:idkjs/bs-node",
    "marked": "^0.3.6",
    "minimist": "^1.2.0",
    "reason-glob": "gist:b373fd3a206d2e6edc90d98e6c714114"
  },
  "devDependencies": {
    "bs-platform": "^9.0.2",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0"
  },
  "bin": "scripts/runner.js"
}
